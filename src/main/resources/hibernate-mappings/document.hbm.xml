<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" default-cascade="all-delete-orphan">

	<class name="edu.usd.portlet.cmscontent.dao.CMSDocument" table="CMSDocument">

		<id name="id" type="string">
			<column name="id" not-null="true" length="500" sql-type="TEXT"/>
		</id>

		<property name="title" type="string">
			<column name="title" length="300"/>
		</property>

		<property name="content" type="string">
			<column name="content" length="8000"/>
		</property>
		
		<property name="source" type="string">
			<column name="source" length="50"/>
		</property>

	</class>

</hibernate-mapping>
